<div class="jumbotron">
  <div class="container text-center">
    <h3><%= @photo.title %><small> by <%= @photo.user.name %></small></h3>
    <%= image_tag @photo.upload.url, :class => "img-responsive image-center" %>
    <div class="row">
      <div class="col-md-offset-3 col-md-3"><%= @photo.created_at.to_formatted_s(:long) %></div>
      <div class="col-md-3"><%= render_candies(@photo) %></div>
    </div>
    <p><%= @photo.description %></p>
  </div>
  <% if @photo.candy_count > 0 %>
  <div class="row text-center">
  <%= @photo.candies.collect { |candy| candy.user.name }.join (", ") %> gave candy.
  </div>
  <% end %>
  <%= render_comments(@photo) %>
</div>
