<!DOCTYPE html>
<html>
<head>
  <title>TyLovesCandy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag 'flowplayer.min.js' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=320, height=device-height" />
</head>
<body class="<%= params[:controller] %>">

  <div id="wrap" class="container">

    <div class="navbar navbar-fixed-top" data-toggle="collapse" data-target=".nav-collapse">
      <div class="navbar-inner">
        <div class="container">
          <button class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/">TyLovesCandy</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to "Pictures", photos_path %></li>
              <li><%= link_to "Videos", videos_path %></li>
              <li><%= link_to "Rankings", rankings_path %></li>
              <li><%= link_to "How To Play", how_to_play_path %></li>
            </ul>
            <div class="span4 pull-right">
            <% if @current_user %>
              <div class="btn-group pull-right">
                <button type="button" class="btn">
                  <i class="icon-cloud-upload"></i> <%= link_to "Upload", uploads_path %>
                </button>
                <button type="button" class="btn">
                  <i class="icon-user"></i> <%= link_to @current_user.name, edit_user_path(@current_user) %><span class="badge pull-right">42</span>
                </button>
                <button type="button" class="btn">
                  <i class="icon-signout"></i> <%= link_to "Logout", session_path(session), :method => :delete %>
                </button>
              </div>
              <% else %>
              <div class="btn-group pull-right">
                <button class="btn"><%= link_to "Sign Up", new_user_path %></button>
                <button class="btn"><%= link_to "Login", new_session_path %></button>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if flash.count > 0 %>
    <div class="row">
      <div class="span12">        
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %> 
      </div>
    </div>
    <% end %>

    <% if params[:controller] == "welcome" %>
    <div class="page-header header" id="content">
      <div class="container">
        <h1 class="header-title">Ty Loves Candy <small>The Wedding Game for Tyler Stanley and Candace Flores</small></h1>
      </div>
    </div>
    <% end %>

    <div class="row yield-content">
      <%= yield %>
    </div>

  </div>

  <div id="footer">
    <div class="container">
      <p class="text-center credit">Website lovingly crafted by Tristan Stanley.</p>
    </div>
  </div>

</body>
</html>
