<!DOCTYPE html>
<html>
<head>
  <title>TyLovesCandy</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %>">

  <div id="container">

  <% if @current_user %>
  <div class="loggedin_header">        
    Welcome, <%= @current_user.name ? @current_user.name : @current_user.email %> (<%= link_to "Edit", edit_user_path(@current_user._id) %> | <%= link_to "logout", :controller => :sessions, :action => :destroy %>)
  </div>
  <% end %>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %> 
  <%= yield %>

  </div>

</body>
</html>
