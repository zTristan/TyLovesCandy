<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
      <span class="sr-only">Uploading...</span>
    </div>
  </div>
</div>
</script>

<h2>Uploaded Pictures and Videos</h2>
<%= form_for Upload.new, :html => { :multipart => true, :id => "new_upload" } do |f| %>
  <div class="row fileupload-buttonbar">
    <div class="span12">
      <span class="btn btn-success fileinput-button">
        <i class="icon-plus icon-white"></i>
        <span>Add files...</span>
        <%= f.file_field :upload %>
      </span>
    </div>
  </div>
<% end %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#photos" data-toggle="tab">Pictures</a></li>
    <li><a href="#videos" data-toggle="tab">Videos</a></li>
  </ul>
  <div class="tab-content">
    <div id="photos" class="tab-pane row active">
      <h4>Your Photos</h4>
      <% @uploads.each { |upload| if upload._type == "Photo" %>
        <%= quick_edit(upload) %>
      <% end } %>
    </div>
    <div id="videos" class="tab-pane row">
      <h4>Your Videos</h4>
      <% @uploads.each { |upload| if upload._type == "Video" %>
        <%= quick_edit(upload) %>
      <% end } %>
    </div>
  </div><!-- /.tab-content -->
</div><!-- /.tabbable -->
