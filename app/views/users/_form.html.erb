
<%= form_for @user, :html => {:class => 'form-signin'} do |f| %>
  <h2 class="form-signin-heading"><%= heading %></h2>
  <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
  <%= f.text_field :email, :class => "form-control", :placeholder => "Email address" %>
  <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirm" %>
  <%= f.submit submit_text, :class => "btn btn-lg btn-primary btn-block" %>
<% end %>
