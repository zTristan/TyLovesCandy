<h2 class="form-signin-heading text-center">Please log in</h2>
<%= form_tag sessions_path, :class => 'form-signin' do %>
  <%= text_field_tag :email, params[:email], :class => "form-control", :placeholder => "Email address", :autofocus => true %>
  <%= password_field_tag :password, "", :class => "form-control", :placeholder => "Password" %>
  <%= submit_tag "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
  <p>Need an account?<br/><%= link_to "Create Account", new_user_path %> or <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></p>
<% end %>
